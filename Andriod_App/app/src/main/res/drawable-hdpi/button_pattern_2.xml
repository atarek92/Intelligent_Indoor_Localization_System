    <item>
		<shape>  
            <gradient  
                android:startColor="#008B8B"
                android:endColor="#E0FFFF"                 
 
                android:angle="90" />  
            <stroke  
                android:width="2dp"  
                android:color="#dcdcdc" />  
            <corners  
                android:radius="6dp" />  
            <padding  
                android:left="2dp"  
                android:top="2dp"  
                android:right="2dp"  
                android:bottom="2dp"/>
        </shape>  
    </item> 
    <!-- default -->
</selector>
